<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="summaryViewModel"
            type="com.example.app21try6.bookkeeping.summary.SummaryViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".bookkeeping.summary.BookSummaryFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn1"
                android:text="add"
                android:onClick="@{() -> summaryViewModel.onStartTracking()}"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn2"
                android:text="clear"
                android:onClick="@{() -> summaryViewModel.onClear()}"
                />
                -->
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@{summaryViewModel.year_list}"
                android:selectedItemPosition="@={summaryViewModel._itemPosition}"
                />
            <Spinner
                android:id="@+id/spinner_m"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:entries="@{summaryViewModel.months_list}"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_horizontal"
                android:selectedItemPosition="@={summaryViewModel._itemMonthPosition}" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView_sumary"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>