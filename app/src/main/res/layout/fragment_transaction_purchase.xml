<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".transaction.TransactionPurchase">
        <TextView
            android:id="@+id/lbl_date"
            style="@style/active_transaction_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:text="Tanggal: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/txt_date"
            style="@style/active_transaction_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:text="Tanggal: "
            app:layout_constraintStart_toEndOf="@id/lbl_suplier"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/lbl_suplier"
            style="@style/active_transaction_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:text="Suplier: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_date" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="200dp"
            android:id="@+id/il_disc"
            app:layout_constraintStart_toEndOf="@id/lbl_suplier"
            app:layout_constraintTop_toBottomOf="@id/lbl_date"
            android:layout_height="60dp">
            <AutoCompleteTextView
                android:id="@+id/text_discount"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="@dimen/big_margin"
                android:paddingEnd="@dimen/big_margin"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_suplier"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/lbl_total"
            style="@style/active_transaction_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:text="Total: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/txt_total"
            style="@style/active_transaction_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:text="Rp.100.000.00"
            app:layout_constraintStart_toEndOf="@id/lbl_total"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add_new_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lbl_total"
            android:src="@drawable/fab"
            app:fabCustomSize="56dp"
            app:maxImageSize="56dp"
            android:scaleType="center" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>