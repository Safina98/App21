<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="base_button">
    <!--
    <item name="backgroundColor">@color/secondaryColor</item>
    <item name="background">@color/secondaryColor</item>
    <item name="tint">@color/secondaryColor</item>
    -->
</style>


    <style name="Base_ToolbarTheme">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/primaryTextColor</item>
    </style>
    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>
    <style name="Base_ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:theme">@style/Base_ToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
    </style>
    <style name="toobar_btn">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="sub_btn_style" parent="base_button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="add_btn_style" parent="base_button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="texr_detail_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/alegreya_sc</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_subproduct_small_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/alegreya_sc</item>
        <!--<item name="android:textColor">@color/dark_green3</item>-->
        <item name="android:textSize">18sp</item>
    </style>
    <style name="text_note_small_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/architects_daughter</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textColor">@color/dark_green3</item>-->
        <item name="android:textSize">20sp</item>
    </style>
    <style name="add_subs_btn_detail">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <style name="text_product_title_bookkeeping">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">@font/alegreya_sc</item>
        <!--<item name="android:textColor">@color/dark_green3</item>-->
        <item name="android:textSize">24dp</item>
    </style>
    <style name="text_product_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">@font/alegreya_sc</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="active_transaction_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/metrophobic</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="active_transaction_small_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/metrophobic</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_trans_detail_style">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="plus_minum_btn_trans">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="EditText.NoBackground" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/tool_bar_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="paddingStart">2dp</item>
        <item name="paddingEnd">2dp</item>
        <item name="android:radius">4dp</item>
    </style>
    <style name="AlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#f00</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
    <item name="android:textColor">#00f</item>
    </style>
    <!-- res/values/styles.xml -->



</resources>